<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/signin_background"
    tools:context=".HomeActivity">
<include android:id="@+id/app_bar" layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:id="@+id/user"
        android:weightSum="1"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:id="@+id/imageView"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/user_placeholder"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:text="Name"
            android:id="@+id/nameText"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textAllCaps="false"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="100dp">

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_disaster_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/button_bg_transparent"
                android:drawableTop="@drawable/icon_1"
                android:text="@string/disaster_info"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="@font/punarbhaba"/>

            <Button
                android:id="@+id/btn_disaster_ask_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/button_bg_transparent"
                android:drawableTop="@drawable/icon_2"
                android:text="@string/ask_for_help"
                android:textAlignment="center"
                android:fontFamily="@font/punarbhaba"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_important_phn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/button_bg_transparent"
                android:drawableTop="@drawable/icon_3"
                android:text="@string/important_phn_number"
                android:textAlignment="center"
                android:fontFamily="@font/punarbhaba"/>

            <Button
                android:id="@+id/btn_hotline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/button_bg_transparent"
                android:drawableTop="@drawable/icon_4"
                android:text="@string/hotline"
                android:textAlignment="center"
                android:fontFamily="@font/punarbhaba"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/button_bg_transparent"
                android:drawableTop="@drawable/icon_5"
                android:text="@string/news"
                android:textAlignment="center"
                android:fontFamily="@font/punarbhaba"/>

            <Button
                android:id="@+id/btn_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/button_bg_transparent"
                android:drawableTop="@drawable/icon_6"
                android:text="@string/others"
                android:textAlignment="center"
                android:fontFamily="@font/punarbhaba"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>